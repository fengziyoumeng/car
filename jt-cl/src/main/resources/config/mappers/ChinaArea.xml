<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rongdu.cashloan.cl.mapper.ChinaAreaMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.rongdu.cashloan.cl.domain.ChinaArea">
		<id column="id" property="id" />
		<result column="name" property="name" />
		<result column="pid" property="pid" />
	</resultMap>
    
    <select id="selectAllProvince"  resultMap="BaseResultMap">
    	SELECT id,name,pid
    	FROM china_area
    	WHERE pid=0
    </select>

    <select id="selectAreaByPid"  resultMap="BaseResultMap">
    	SELECT id,name,pid
    	FROM china_area
    	WHERE pid=#{parentId}
    </select>

</mapper>
